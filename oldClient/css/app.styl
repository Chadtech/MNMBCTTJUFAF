*, *:before, *:after
  margin 0
  padding 0
  -webkit-box-sizing border-box
  box-sizing border-box

@font-face
  font-family bodyContent
  src url('ProximaNova-Regular.otf')
  
@font-face
  font-family headerContent
  src url('Ubuntu-Regular.ttf')

LMwhite     = #ffffff
LMHiLight   = #bdd530
LMLightGray = #9d9d9d
LMDarkGray  = #59595b
LMBlack     = #000000

specifyFont(inputColor, inputFont, inputSize)
  // font-smooth never
  // webkit-font-smoothing none
  // -webkit-font-smoothing none
  font-family inputFont
  font-size inputSize
  color inputColor
  line-height 120%
  
inputBasics()
  border none
  outline none
  
body
  background LMwhite
  color LMDarkGray

.content
  width 100%
  height 100%
  transition all 1s
  
.container
  // box-sizing border-box
  width 100%


.column
  //margin-right 1em
  content ''
  display table
  clear both
  display inline-block
  &.fat
    position absolute
    top 0px
    left 200px
    width 75%
  &.narrow
    position absolute
    width 200px
    top 0px

.row
  float top
  display inline-block
  border 0px solid
  border-color LMHiLight
  //margin-bottom 1em
  &.short
    height 400px
    width 100%
    padding 1em
  &.header
    min-height 200px
    height auto
    width 100%
    display table
    clear both
    
  &.tall
    height auto
  &.regular
    height 300px
    
.centered
  display block
  margin-left 5%
  //margin-right auto

.edge
  background-color LMLightGray
  width 0.33em
  position absolute
  height 100%
  left 200px
  
.horizontal
  background-color LMLightGray
  float top
  width auto
  height 0.33em

.indent
  margin-left 0em
    
.spacer
  height 0em

.break
  height 1em
    
.point
  transition all 0.25s
  specifyFont(LMDarkGray, bodyContent, 1em)
  &.hilight
    specifyFont(LMHiLight, bodyContent, 1em)
  
  
.header
  specifyFont(LMDarkGray, headerContent, 1.25em)

.input
  transition all 0.5s
  height 2em
  margin-right 1em
  padding-left 1em
  padding-right 0em
  width 185px
  specifyFont(LMLightGray, bodyContent, 1em)
  background rgba(64, 64, 64, 1)
  inputBasics()
  &.special
    background rgba(64, 58, 32, 1)
  &.verySpecial
    background rgba(48, 42, 20, 1)
  &.quarter
    width 44px
  &.half
    width 88px
  &.threeQuarters
    width 137px
  &.oneAndHalf
    width 282px
  &.double
    width 379px
  &.problem
    background #f23d21
    color rgba(0, 0, 0, 1)
  &.success
    background #0aca1a
    color rgba(0, 0, 0, 1)
  &.hidden
    padding 0em
    margin-bottom 0em
    color rgba(0, 0, 0, 1)
    background rgba(0, 0, 0, 1)
    
.submit
  transition all 0.25s
  width 185px
  padding-left 0em
  padding-right 0em
  specifyFont( LMBlack, bodyContent, 1em)
  background #c8c4bc
  text-decoration none
  &.quarter
    width 38px
  &.half
    width 88px
      
  &:hover
    color rgba(0, 0, 0, 1)
    background #ccc4b8
    





